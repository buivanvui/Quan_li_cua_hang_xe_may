<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/vien_bill_2"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="18dip"
            android:text="Hóa Đơn Thanh Toán"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="normal|bold" />
    </TableRow>

    <TextView
        android:id="@+id/txt_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:padding="10dp"
        android:text="ID:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1"
        android:layout_toRightOf="@id/txt_Id"
        android:padding="10dip"
        android:text="2"
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/txt_KH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khách hàng:"
        android:textSize="20dp"
        android:layout_below="@+id/txt_Id"
        android:textColor="#000000"
        android:padding="10dip" />

    <TextView
        android:id="@+id/text_khachmua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Id"
        android:layout_toRightOf="@+id/txt_KH"
        android:padding="10dip"
        android:text="Bui Van Vui"
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/txt_ngayban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày bán:"
        android:textSize="20dp"
        android:layout_below="@id/txt_KH"
        android:textColor="#000000"
        android:padding="10dip" />

    <TextView
        android:id="@+id/text_ngayban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_KH"
        android:drawableLeft="@drawable/ic_clock"
        android:layout_toRightOf="@id/txt_ngayban"
        android:padding="10dip"
        android:text="20/02/2022 "
        android:textColor="#000000"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="0.6in"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ngayban"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txt_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/vien_bill"
            android:padding="10dip"
            android:text="Tên xe"
            android:textColor="#E91E63"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/text_ten"
            android:layout_width="0.5in"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_ten"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dip"
            android:text="SH"
            android:textColor="#000000"
            android:textSize="17dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ngayban"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/r2">

        <TextView
            android:id="@+id/txt_giamua"
            android:layout_width="0.7in"
            android:layout_height="wrap_content"
            android:background="@drawable/vien_bill"
            android:gravity="center"
            android:padding="10dip"
            android:text="Giá mua"
            android:textColor="#E91E63"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/text_giamua"
            android:layout_width="0.7in"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_giamua"
            android:padding="10dip"
            android:text="100,000,000"
            android:textColor="#000000"
            android:textSize="17dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ngayban"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/r3">

        <TextView
            android:id="@+id/txt_soluong"
            android:layout_width="0.3in"
            android:layout_height="wrap_content"
            android:background="@drawable/vien_bill"
            android:gravity="center"
            android:padding="10dip"
            android:text="SL"
            android:textColor="#E91E63"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/text_soluong"
            android:layout_width="0.3in"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_soluong"
            android:layout_centerHorizontal="true"
            android:padding="10dip"
            android:text="100"
            android:textColor="#000000"
            android:textSize="17dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ngayban"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/r4">

        <TextView
            android:id="@+id/txt_thanhtien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vien_bill"
            android:gravity="center"
            android:padding="10dip"
            android:text="Thành tiền"
            android:textColor="#E91E63"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/text_thanhtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_thanhtien"
            android:layout_centerHorizontal="true"
            android:padding="10dip"
            android:text="400,000,000 đ"
            android:textColor="#000000"
            android:textSize="17dp" />
    </RelativeLayout>
</RelativeLayout>