<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_ngayFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:gravity="left"
        android:text="01/01/2022"
        android:textColor="#000000"
        android:textSize="23sp" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_ngayFrom"
        android:src="@drawable/ic_right_35dp"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_ngayTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:text="01/02/2022"
        android:textColor="#000000"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/image_Lich"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_lich" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_ngayFrom"
        android:layout_marginTop="8dp"></com.github.mikephil.charting.charts.PieChart>
</RelativeLayout>